{
  "buildCommand": "npm run build",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/**/*.{js,ts,tsx}": {
      "maxDuration": 60
    }
  },
  "env": {
    "NPM_CONFIG_PACKAGE_LOCK": "true",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "NEXT_FORCE_INSTALL_DEPS": "true",
    "NEXT_PRIVATE_SKIP_SETUP": "true"
  }
}